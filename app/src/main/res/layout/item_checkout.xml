<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/checkout_trash"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/trash" />

        <TextView
            android:id="@+id/checkout_content_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="to_be_replaced"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/checkout_text_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/checkout_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/checkout_text_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkout_trash" />

        <TextView
            android:id="@+id/checkout_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/checkout_trash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkout_content_name" />

        <TextView
            android:id="@+id/checkout_content_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to_be_replaced"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/checkout_trash"
            app:layout_constraintStart_toEndOf="@+id/checkout_text_price"
            app:layout_constraintTop_toBottomOf="@+id/checkout_content_name" />

        <TextView
            android:id="@+id/checkout_text_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quantitÃ©: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/checkout_content_price"
            app:layout_constraintTop_toBottomOf="@+id/checkout_content_name" />

        <TextView
            android:id="@+id/checkout_content_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/checkout_text_qty"
            app:layout_constraintTop_toBottomOf="@+id/checkout_content_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>